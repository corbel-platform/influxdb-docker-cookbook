reporting-disabled = <%= @config['reporting_disabled'] %>

[meta]
  dir = "<%= @data_path %>/meta"
  hostname = "<%= @config['meta']['hostname'] %>"
  bind-address = ":8088"
  retention-autocreate = <%= @config['meta']['retention_autocreate'] %>
  election-timeout = "<%= @config['meta']['election_timeout'] %>"
  heartbeat-timeout = "<%= @config['meta']['heartbeat_timeout'] %>"
  leader-lease-timeout = "<%= @config['meta']['leader_lease_timeout'] %>"
  commit-timeout = "<%= @config['meta']['commit_timeout'] %>"

[data]
  dir = "<%= @data_path %>"
  max-wal-size = <%= @config['data']['max_wal_size'] %>
  wal-flush-interval = "<%= @config['data']['wal_flush_interval'] %>"
  wal-partition-flush-delay = "<%= @config['data']['wal_partition_flush_delay'] %>"
  retention-auto-create = <%= @config['data']['retention_auto_create'] %>
  retention-check-enabled = <%= @config['data']['retention_check_enabled'] %>
  retention-check-period = "<%= @config['data']['retention_check_period'] %>"
  retention-create-period = "<%= @config['data']['retention_create_period'] %>"

[cluster]
  shard-writer-timeout = "<%= @config['cluster']['shard_writer_timeout'] %>"
  write-timeout = "<%= @config['cluster']['writer_timeout'] %>"

[retention]
  enabled = <%= @config['retention']['enabled'] %>
  check-interval = "<%= @config['retention']['check_interval'] %>"

[shard-precreation]
  enabled = <%= @config['shard_precreation']['enabled'] %>
  check-interval = "<%= @config['shard_precreation']['check_interval'] %>"
  advance-period = "<%= @config['shard_precreation']['advance_period'] %>"

[admin]
  enabled = <%= @config['admin']['enabled'] %>
  bind-address = ":8083"

[http]
  enabled = <%= @config['http']['enabled'] %>
  bind-address = ":8086"
  auth-enabled = <%= @config['http']['auth_enabled'] %>
  log-enabled = <%= @config['http']['log_enabled'] %>
  write-tracing = <%= @config['http']['write_tracing'] %>
  pprof-enabled = <%= @config['http']['pprof_enabled'] %>

[[graphite]]
  enabled = <%= @config['graphite']['enabled'] %>
  bind-address = ":2003"
  database = "<%= @config['graphite']['database'] %>"
  protocol = "<%= @config['graphite']['protocol'] %>"
  batch-size = <%= @config['graphite']['batch_size'] %>
  batch-timeout = "<%= @config['graphite']['batch_timeout'] %>"
  consistency-level = "<%= @config['graphite']['consistency_level'] %>"
  separator = "<%= @config['graphite']['separator'] %>"

[collectd]
  enabled = <%= @config['collectd']['enabled'] %>
  bind-address = ":25826"
  database = "<%= @config['collectd']['database'] %>"
  retention-policy = "<%= @config['collectd']['retention_policy'] %>"
  batch-size = <%= @config['collectd']['batch_size'] %>
  batch-timeout = "<%= @config['collectd']['batch_timeout'] %>"
  typesdb = "/usr/share/collectd/types.db"

[opentsdb]
  enabled = <%= @config['opentsdb']['enabled'] %>
  bind-address = ":4242"
  database = "<%= @config['opentsdb']['database'] %>"
  retention-policy = "<%= @config['opentsdb']['retention_policy'] %>"
  consistency-level = "<%= @config['opentsdb']['consistency_level'] %>"

[udp]
  enabled = <%= @config['udp']['enabled'] %>
  bind-address = ":4444"
  database = "<%= @config['udp']['database'] %>"
  batch-size = <%= @config['udp']['batch_size'] %>
  batch-timeout = "<%= @config['udp']['batch_timeout'] %>"

[monitoring]
  enabled = <%= @config['monitoring']['enabled'] %>
  write-interval = "<%= @config['monitoring']['write_interval'] %>"

[continuous_queries]
  enabled = <%= @config['continuous_queries']['enabled'] %>
  recompute-previous-n = <%= @config['continuous_queries']['recompute_previous_n'] %>
  recompute-no-older-than = "<%= @config['continuous_queries']['recompute_no_older_than'] %>"
  compute-runs-per-interval = <%= @config['continuous_queries']['compute_runs_per_interval'] %>
  compute-no-more-than = "<%= @config['continuous_queries']['compute_no_more_than'] %>"

[hinted-handoff]
  enabled = <%= @config['hinted_handoff']['enabled'] %>
  dir = "<%= @data_path %>/hh"
  max-size = <%= @config['hinted_handoff']['max_size'] %>
  max-age = "<%= @config['hinted_handoff']['max_age'] %>"
  retry-rate-limit = <%= @config['hinted_handoff']['retry_rate_limit'] %>
  retry-interval = "<%= @config['hinted_handoff']['retry_interval'] %>"
